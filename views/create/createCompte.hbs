
{{!-- =============== Créer un compte ===============--}}
<div class="conatainer">
    <div class="row">
        <div class="col l12 m12 s12 bg-beige" style="text-align: center;">
            <h1>Création de compte</h1>
        </div>
    </div>
    

{{!-- =============== express validator ===============--}}
     {{#if errors}}
        {{!-- On parcours le tableau des errors --}}
        {{#each errors}}
            {{!-- On affiche la variable que l'on veux afficher --}}
            <div class="row">
                <div class="col l10 s10">
                    <div class="msg msg-error z-depth-3 scale-transition">{{msg}}</div>
                </div>
            </div>       
        {{/each}}
    {{/if}}
{{!-- =============== FIN express validator ===============--}}


{{!-- =============== Formulaire de création de compte ===============--}}
    <div class="row">
        <form action="/createCompte" method="POST">
            <div class="row">
                <div class="input-field col l6 s12">
                    <input id="firstname" type="text" name="firstname" class="validate"  >
                    <label for="firstname">Prénom</label>
                </div>
                <div class="input-field col l6 s12">
                    <input id="lastname" type="text" name="lastname" class="validate"  >
                    <label for="lastname">Nom</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col l12 s12">
                    <input id="email" type="email" name="email" class="validate"  >
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col l6 s12">
                    <input id="password" type="password" name="password">
                    <label for="password">Mot de passe</label>
                </div>
                <div class="input-field col l6 s12">
                    <input id="password" type="password" name="confPassword">
                    <label for="password">Confirmation mot de passe</label>
                </div>
            </div>
            <div class="row">
                <div class="col l12 s12">
                    <p>
                        <label>
                            <input type="checkbox" disabled />
                            <span>Je déclare être majeur</span>
                        </label>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <button class="btn btn-stand waves-effect waves-light" type="submit">Valider
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
{{!-- =============== FIN Formulaire de création de compte ===============--}}

{{!-- =============== Style pour bannière erreur ===============--}}
<style>
    .msg {
  width:100%;
  border: 1px solid;
  padding:10px;
  
  color: grey;
}
.msg-error {
  // rouge
  border-color: #d32f2f;
  background-color: #ef5350;
  color: white;
}
</style>
{{!-- =============== FIN Style pour bannière erreur ===============--}}